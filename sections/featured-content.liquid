<section class="border-top section page-section">
  <div class="container align-centre">
    <h1 class="section-heading">{{ section.settings.title | escape }}</h1>
    <div class="reading-column rte">{{ section.settings.text }}</div>
  </div>
</section>


{% schema %}
  {
    "name": "Rich text",
	"class": "homepage-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
		"default": "Rich text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
		"default": "<p>Use this text to share information about your store with your customers.</p><p>Describe products, share announcements, or welcome customers to your store.</p>"
      }
	],
	"presets": [
	  {
		"name": "Rich text",
        "category": "Text",
        "settings": {}
	  }
	]
  }
{% endschema %}
