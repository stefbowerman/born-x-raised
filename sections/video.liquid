<section class="border-top section page-section" data-section-type="video">
  <div class="container align-centre">
    {% if section.settings.video_url != blank %}
    <div class="video-container" data-video-id="{{ section.settings.video_url.id }}" data-video-type="{{ section.settings.video_url.type }}" data-video-autoplay="{{ section.settings.autoplay }}"></div>
    {% endif %}
  </div>
</section>


{% schema %}
  {
    "name": "Video",
	"class": "homepage-section",
    "settings": [
      {
        "id": "video_url",
        "type": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"],
		"info": "Supports Youtube and Vimeo",
        "default": "https:\/\/www.youtube.com\/watch?v=_9VUPq3SxOc"
      },
      {
        "id": "autoplay",
        "type": "checkbox",
        "label": "Autoplay",
		"default": false
      }
	],
	"presets": [
	  {
		"name": "Video",
        "category": "Video",
        "settings": {
		  "video_url": "https:\/\/www.youtube.com\/watch?v=_9VUPq3SxOc"
        }
	  }
	]
  }
{% endschema %}
