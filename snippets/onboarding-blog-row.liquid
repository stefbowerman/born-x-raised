<div class="onboarding">
  <div class="onboarding-behind">
    <div class="opposing-items">
      <h1 class="section-heading left">{{ 'home_page.onboarding.blog_title' | t }}</h1>
      
      <span class="btn">{{ 'collections.general.view_all' | t }}</span>
    </div>

    <div class="row">

      {% for i in (1..3) %}

      {% assign mod4 = forloop.index | modulo: 4 %}
      {% assign mod3 = forloop.index | modulo: 3 %}
      {% assign mod2 = forloop.index | modulo: 2 %}
      
      <div class="article third column {% if mod2 == 1 %} nth-2{% endif %}{% if mod3 == 1 %} nth-3{% endif %}{% if mod4 == 1 %} nth-4{% endif %}">
        
        <div class="article-image">
          <div class="placeholder-image landscape">{{ 'image' | placeholder_svg_tag }}</div>
        </div>
        
        <div class="reading-column">
          <h2>{{ "home_page.onboarding.article_title" | t }}</h2>

          <div class="excerpt rte">
            {{ "home_page.onboarding.article_excerpt" | t }}
          </div>

          <a class="more-link">{{ 'blogs.general.read_more' | t }}</a>
        </div>
        
      </div>

      {% endfor %}

    </div>
  </div>
</div>
