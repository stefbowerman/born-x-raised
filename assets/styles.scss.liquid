/* Control the pages maximum width. */
.container {
  margin: 0 auto;
  max-width: $site-max-width;
  width: 85% - ($site-edge-margin * 2) !important;
  padding-left: $grid-gutter;
  padding-right: $grid-gutter;
}
.reading-column {
  margin-left: auto;
  margin-right: auto;
  width: $reading-column-width;
  max-width: 100%;
}

/* Medium and large screens */
.row {
  @include clearfix();
  margin-left: -$grid-gutter;
  margin-right: -$grid-gutter;
} 
.column {
  float: left;
  padding-left: $grid-gutter;
  padding-right: $grid-gutter;
}
.column.half { width: 50%; }
.column.quarter { width: 25%; }
.column.three-quarters { width: 75%; }
.column.third { width: 33.33333%; }
.column.two-thirds { width: 66.666%; }
.column.fifth { width: 20%; }
.column.four-fifths { width: 80%; }
.column.full { width: 100%; }
.column.flex.max-cols-6 { width: 16.66666%; }
.column.flex.max-cols-4 { width: 25%; }
.column.flex.max-cols-3 { width: 33.33333%; }
.column.flex.max-cols-2 { width: 50%; }

.column.bleed {
  padding-left: 0;
  padding-right: 0;
}

.first-in-row {
  clear: left;
}

.grid {
  .column {
    margin-bottom: $grid-gutter * 1.5;
  }
  .column.half:nth-child(2n+1),
  .column.flex.max-cols-2:nth-child(2n+1) {
    clear: left;
  }
  .column.third:nth-child(3n+1),
  .column.flex.max-cols-3:nth-child(3n+1) {
    clear: left;
  }
  .column.quarter:nth-child(4n+1),
  .column.flex.max-cols-4:nth-child(4n+1) {
    clear: left;
  }
  .column.fifth:nth-child(5n+1) {
    clear: left;
  }
  .column.flex.max-cols-6:nth-child(6n+1) {
    clear: left;
  }
}

.row.one-row .column {
  margin-bottom: 0;
}

.mobile, .mobile-inline {
  display: none;
}

@media (max-width: 1250px) {
  .column.flex.max-cols-6 {
    width: 25%;
    .grid &:nth-child(6n+1) { clear: none; }
    .grid &:nth-child(4n+1) { clear: left; }
  }
  .row.one-row .column.flex.max-cols-6:nth-child(n+5) {
    display: none;
  }
}

@media (max-width: 960px) {
  .column.flex.max-cols-4 {
    width: 33.33333%;
    .grid &:nth-child(4n+1) { clear: none; }
    .grid &:nth-child(3n+1) { clear: left; }
  }
  .column.flex.max-cols-3,
  .column.flex.max-cols-2 {
    width: 50%;
    .grid &:nth-child(3n+1) { clear: none; }
    .grid &:nth-child(2n+1) { clear: left; }
  }
  .row.one-row .column.flex.max-cols-3:nth-child(n+3),
  .row.one-row .column.flex.max-cols-4:nth-child(n+4) {
    display: none;
  }
}

@media (max-width: 767px) {
  .mobile {
    display: block;
  }
  .mobile-inline {
    display: inline;
  }
